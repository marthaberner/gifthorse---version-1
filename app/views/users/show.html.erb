<div class="user-page-container">
  <div class="greeting">
    <h3>Hello, <%= @user.email %>!</h3>
  </div>

    <div class="list-gifts-container">
      <h3>Your GiftHorse List</h3>
      <table width="500">
        <thead>
        <th>Nickname</th>
        <th>Url</th>
        </thead>
        <tbody>
        <% @gifts.each do |gift| %>
        <tr>
          <td><%= gift.nickname %></td>
          <td><%= gift.url %></td>
        </tr>
          <% end %>
        </tbody>
      </table>

    </div>

      <div class="add-gifts-container">
        <h3>Add An Item to Your GiftHorse</h3>
        <%= form_for @gift do |f| %>

          <% if @gift.errors.present? %>
            <div class="errors">
              <h3>There was an error</h3>
              <ul class="error-list">
                <%= @gift.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          <% end %>

          <p>
            <%= f.label :nickname, class: "form-label" %>
            <%= f.text_field :nickname %>
          </p>

          <p>
            <%= f.label :url, class: "form-label" %>
            <%= f.url_field :url %>
          </p>

          <p>
            <%= f.submit "Add Item", class: "add-item-button" %>
          </p>
        <% end %>

      </div>
</div>